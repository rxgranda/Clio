<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/clio</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="clio/Entities/Pc.hbm.xml"/>
    <mapping resource="clio/Entities/Conexion.hbm.xml"/>
    <mapping resource="clio/Entities/Modulo.hbm.xml"/>
    <mapping resource="clio/Entities/Usuario.hbm.xml"/>
    <mapping resource="clio/Entities/RolesUsuarios.hbm.xml"/>
    <mapping resource="clio/Entities/Sanciones.hbm.xml"/>
    <mapping resource="clio/Entities/Laboratorio.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
